<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="my.edu.tarc.hungerhub.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_survey"
        android:name="my.edu.tarc.hungerhub.ui.survey.SurveyFragment"
        android:label="@string/menu_survey" >
        <action
            android:id="@+id/action_nav_survey_to_surveyFragment2"
            app:destination="@id/surveyFragment2" />
    </fragment>

    <fragment
        android:id="@+id/nav_donation"
        android:name="my.edu.tarc.hungerhub.ui.donation.DonationFragment"
        android:label="@string/menu_donation" />
    <fragment
        android:id="@+id/nav_request"
        android:name="my.edu.tarc.hungerhub.ui.request.RequestFragment"
        android:label="@string/menu_request" />
    <fragment
        android:id="@+id/surveyFragment2"
        android:name="my.edu.tarc.hungerhub.ui.survey.SurveyFragment2"
        android:label="fragment_survey2"
        tools:layout="@layout/fragment_survey2" >
        <action
            android:id="@+id/action_surveyFragment2_to_nav_survey"
            app:destination="@id/nav_survey" />
    </fragment>
</navigation>
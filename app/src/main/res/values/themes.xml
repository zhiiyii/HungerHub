<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HungerHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>               <!-- app bar -->
        <item name="colorPrimaryVariant">@color/brown_dark</item>   <!-- notification bar -->
        <item name="colorOnPrimary">@color/white</item>             <!-- text & button text -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>          <!-- input highlight --> <!-- floating button -->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>           <!-- floating button icon -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.HungerHub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HungerHub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HungerHub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Login Part -->
    <style name="ButtonWhite">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:background">@color/green_600</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/green_100</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:backgroundTint">@color/grey_light</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="startIconTint">?attr/colorSecondaryVariant</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_feild</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>